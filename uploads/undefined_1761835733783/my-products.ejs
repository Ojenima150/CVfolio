<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>My Products</title>
  </head>
  <body>
    <h1>My Products</h1>
    <p>Logged in as: <%= user?.name || 'Guest' %></p>

    <% if (!products || products.length === 0) { %>
      <p>No products found.</p>
    <% } else { %>
      <ul>
        <% products.forEach(p => { %>
          <li>
            <strong><%= p.name %></strong> â€” <%= p.description %>
            <% if (p.image_url) { %>
              <br/><img src="<%= p.image_url %>" alt="<%= p.name %>" style="max-width:120px"/>
            <% } %>
            <br/>Price: <%= p.price %> | Stock: <%= p.stock %>
          </li>
        <% }) %>
      </ul>
    <% } %>

    <a href="/products">Back to all products</a>
  </body>
</html>